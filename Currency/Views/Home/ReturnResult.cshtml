
@{
    ViewData["Title"] = "ReturnResult";
}
@model Currency.Model.Result

<style>
    body {
        background-image: url('https://previews.123rf.com/images/tupungato/tupungato1608/tupungato160800240/61427695-business-doodles-seamless-pattern-financial-drawing-illustration-.jpg');
        background-repeat: repeat;
        background-attachment: fixed;
        background-position: center;
    }

    h1 {
        color: goldenrod;
        font-size: 70px;
        border-radius: 4px;
        margin: 8px 0;
        text-align: center;
        -webkit-text-stroke: 1px black;
        text-shadow: 3px 3px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
        font-family:courier;
    }
    p {
        font-size: 70px;
        text-align: center;
        border-radius: 4px;
        border-width: 2px;
        border-bottom: none;
        background-color: white;
        border-style: outset;
        -webkit-text-stroke: 1px black;
        text-shadow: 3px 3px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
        padding: 14px 20px;
        margin: 8px 0;
        font-family:courier;
    }
</style>

<!DOCTYPE html>
<html>
<head>
    <title>Page Title</title>
</head>
<body>
    <h1><strong>YOUR MONEY AFTER EXCHANGE:</strong></h1>
    <p><strong>@Math.Round(Model.result,6)  @Model.to</strong></p>
</body>
</html>


